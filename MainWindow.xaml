<Window x:Class="DailyJounal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Daily Journal" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow"
        Closing="Window_Closing">
    <Grid>

        <TextBlock x:Name="DateTextBlock" TextWrapping="NoWrap"
                   Text="Main Title"
                   FontSize="32"
                   FontWeight="Bold"
                   TextAlignment="Center" FontFamily="Arial Rounded MT Bold"
        />
        <RichTextBox x:Name="richTextBox" Margin="20,40,20,20" SpellCheck.IsEnabled="True" TextChanged="OnTextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
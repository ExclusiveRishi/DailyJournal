<Window x:Class="DailyJounal.Read"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyJounal"
        mc:Ignorable="d"
        Title="Daily Journal Read" Height="450" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <TextBlock x:Name="DateTextBlock" TextWrapping="NoWrap"
           Text="Main Title"
           FontSize="32"
           FontWeight="Bold"
           TextAlignment="Center" FontFamily="Arial Rounded MT Bold"
           />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="MainTextBox" TextWrapping="Wrap" Text="TextBlock" Margin="20, 40, 20, 20"/>
        </ScrollViewer>



    </Grid>
</Window>
